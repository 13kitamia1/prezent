<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <!--*theme* will make text of the header white just like the action bar -->
    <!--*gravity*We have text and everything to be placced in the bottom of this header"-->
    <!-- changing the height of the nav bar default uses 176 dp "-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Sam lam"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="samLam@email.com" />
</LinearLayout>